@model HastaneRandevuSistemi.Models.Hasta
@{
    ViewData["Title"] = "Profilim";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow mt-4">
            <div class="card-header bg-info text-white">
                <h4><i class="fas fa-user-edit"></i> Profil Bilgilerim</h4>
            </div>
            <div class="card-body">

                @if (TempData["Mesaj"] != null)
                {
                    <div class="alert alert-success">@TempData["Mesaj"]</div>
                }

                <form asp-action="Profil" method="post">
                    <input type="hidden" asp-for="HastaID" />

                    <div class="row mb-3">
                        <div class="col">
                            <label class="form-label text-muted">Ad</label>
                            <input asp-for="Ad" class="form-control" disabled />
                        </div>
                        <div class="col">
                            <label class="form-label text-muted">Soyad</label>
                            <input asp-for="Soyad" class="form-control" disabled />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label text-muted">TC Kimlik No</label>
                        <input asp-for="TCKimlikNo" class="form-control" disabled />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-Posta Adresi</label>
                        <input asp-for="Email" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Telefon" class="form-label">Telefon Numarası</label>
                        <input asp-for="Telefon" class="form-control" />
                    </div>

                    <hr />

                    <div class="mb-3">
                        <label class="form-label fw-bold text-danger">Şifre Değiştir</label>
                        <input type="password" name="YeniSifre" class="form-control" placeholder="Sadece değiştirmek istiyorsanız doldurun" />
                        <small class="text-muted">Şifrenizi değiştirmek istemiyorsanız boş bırakın.</small>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">Bilgileri Güncelle</button>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Ana Sayfaya Dön</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>