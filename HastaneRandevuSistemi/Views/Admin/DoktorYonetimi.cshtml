@model IEnumerable<HastaneRandevuSistemi.Models.Doktor>

@{
    ViewData["Title"] = "Doktor Yönetimi";
}

<h2>Doktor Yönetimi</h2>
<hr />

<p>
    <a asp-action="DoktorEkle" class="btn btn-success">
        <i class="fa fa-plus"></i> Yeni Doktor Ekle
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                Ad Soyad
            </th>
            <th>
                Email
            </th>
            <th>
                Telefon
            </th>
            <th>
                Departman
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ad) @Html.DisplayFor(modelItem => item.Soyad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departman.DepartmanAdi)
                </td>
                <td>
                    <a asp-action="DoktorDuzenle" asp-route-id="@item.DoktorID" class="btn btn-primary btn-sm">
                        <i class="fa fa-edit"></i> Düzenle
                    </a> |
                    <a asp-action="DoktorSil" asp-route-id="@item.DoktorID" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>