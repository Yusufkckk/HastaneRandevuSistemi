@model HastaneRandevuSistemi.Models.Duyuru
@{
    ViewData["Title"] = "Yeni Duyuru";
}

<h2>Yeni Duyuru Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-8">
        <form asp-action="DuyuruEkle">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Baslik" class="control-label">Başlık</label>
                <input asp-for="Baslik" class="form-control" required />
                <span asp-validation-for="Baslik" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Icerik" class="control-label">Duyuru İçeriği</label>
                <textarea asp-for="Icerik" class="form-control" rows="5" required></textarea>
                <span asp-validation-for="Icerik" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Yayınla</button>
                <a asp-action="DuyuruYonetimi" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>