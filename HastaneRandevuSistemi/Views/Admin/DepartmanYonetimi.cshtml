@model IEnumerable<HastaneRandevuSistemi.Models.Departman>

@{
    ViewData["Title"] = "Departman Yönetimi";
}

<h2>Departman Yönetimi</h2>
<hr />

<p>
    <a asp-action="DepartmanEkle" class="btn btn-success">
        <i class="fa fa-plus"></i> Yeni Departman Ekle
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>
                Departman Adı
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DepartmanAdi)
                </td>
                <td>
                    <a asp-action="DepartmanDuzenle" asp-route-id="@item.DepartmanID" class="btn btn-primary btn-sm">
                        <i class="fa fa-edit"></i> Düzenle
                    </a> |
                    <a asp-action="DepartmanSil" asp-route-id="@item.DepartmanID" class="btn btn-danger btn-sm">
                        <i class="fa fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>