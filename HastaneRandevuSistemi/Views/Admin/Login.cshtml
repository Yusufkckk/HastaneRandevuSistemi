@{
    // Sayfanın başlığını "Admin Girişi" olarak ayarlar
    ViewData["Title"] = "Admin Girişi";
    // Bu sayfanın kendi başına bir düzeni olacağını, _Layout.cshtml kullanmayacağını belirtir
    // (İsteğe bağlı, isterseniz bu satırı silebilirsiniz)
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <div class="card shadow-sm" style="margin-top: 100px;">
            <div class="card-header text-center">
                <h3 class="my-2"><i class="fa fa-shield-alt"></i> Admin Paneli Girişi</h3>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-controller="Admin" method="post">

                    @if (ViewBag.Hata != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Hata</div>
                    }

                    <div class="form-group mb-3">
                        <label for="KullaniciAdi" class="form-label">Kullanıcı Adı</label>
                        <input type="text" name="KullaniciAdi" class="form-control" required />
                    </div>
                    <div class="form-group mb-3">
                        <label for="Sifre" class="form-label">Şifre</label>
                        <input type="password" name="Sifre" class="form-control" required />
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-danger">Giriş Yap</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" asp-controller="Home">Hasta Girişine Dön</a>
            </div>
        </div>
    </div>
</div>