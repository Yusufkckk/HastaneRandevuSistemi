@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4">Admin Dashboard</h2>

<div class="row">
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            TOPLAM DOKTOR
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamDoktor</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user-md fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            TOPLAM HASTA
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamHasta</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-user fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            TOPLAM RANDEVU
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamRandevu</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-calendar-check fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            TOPLAM DEPARTMAN
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.ToplamDepartman</div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-building fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<hr />

<div class="row mb-4">
    <div class="col-md-6">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <h5>Doktor Yönetimi</h5>
                <p>Yeni doktor ekle veya düzenle.</p>
                <a asp-action="DoktorYonetimi" asp-controller="Admin" class="btn btn-primary">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <h5>Departman Yönetimi</h5>
                <p>Yeni departman (poliklinik) ekle.</p>
                <a asp-action="DepartmanYonetimi" asp-controller="Admin" class="btn btn-primary">Yönet</a>
            </div>
        </div>
    </div>

</div>
<div class="row">

    <div class="col-md-6">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <h5>Duyuru Yönetimi</h5>
                <p>Ana sayfadaki duyuruları yönet.</p>
                <a href="#" class="btn btn-primary">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow h-100">
            <div class="card-body text-center">
                <h5>Takvim Yönetimi</h5>
                <p>Doktorların çalışma saatlerini ayarla.</p>
                <a href="#" class="btn btn-primary">Yönet</a>
            </div>
        </div>
    </div>
</div>