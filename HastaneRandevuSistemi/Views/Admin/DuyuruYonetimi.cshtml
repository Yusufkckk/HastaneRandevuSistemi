@model IEnumerable<HastaneRandevuSistemi.Models.Duyuru>
@{
    ViewData["Title"] = "Duyuru Yönetimi";
}

<h2>Duyuru Yönetimi</h2>
<hr />

<p>
    <a asp-action="DuyuruEkle" class="btn btn-success">
        <i class="fa fa-plus"></i> Yeni Duyuru Ekle
    </a>
</p>

<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Başlık</th>
            <th>İçerik</th>
            <th>Yayın Tarihi</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="width: 20%;">@item.Baslik</td>
                <td>
                    @if (item.Icerik.Length > 100)
                    {
                        @item.Icerik.Substring(0, 100) <span>...</span>
                    }
                    else
                    {
                        @item.Icerik
                    }
                </td>
                <td style="width: 15%;">@item.YayinTarihi.ToString("dd.MM.yyyy HH:mm")</td>
                <td style="width: 10%;">
                    <a asp-action="DuyuruSil" asp-route-id="@item.DuyuruID"
                       class="btn btn-danger btn-sm"
                       onclick="return confirm('Bu duyuruyu silmek istediğinize emin misiniz?');">
                        <i class="fa fa-trash"></i> Sil
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>