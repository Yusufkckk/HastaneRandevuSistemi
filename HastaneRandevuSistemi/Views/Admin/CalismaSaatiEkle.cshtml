@model HastaneRandevuSistemi.Models.CalismaSaatleri

@{
    ViewData["Title"] = "Çalışma Saati Ekle";
}

<h2>Yeni Çalışma Saati Ekle</h2>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="CalismaSaatiEkle">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label class="control-label">Doktor Seçin</label>
                <select asp-for="DoktorID" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Doktorlar, "DoktorID", "AdSoyad"))">
                    <option value="">-- Seçiniz --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Gun" class="control-label">Gün</label>
                <select asp-for="Gun" class="form-control">
                    <option value="1">Pazartesi</option>
                    <option value="2">Salı</option>
                    <option value="3">Çarşamba</option>
                    <option value="4">Perşembe</option>
                    <option value="5">Cuma</option>
                    <option value="6">Cumartesi</option>
                    <option value="0">Pazar</option>
                </select>
            </div>

            <div class="row">
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="BaslangicSaati" class="control-label">Başlangıç Saati</label>
                    <input type="time" asp-for="BaslangicSaati" class="form-control" value="09:00" />
                </div>
                <div class="col-md-6 form-group mb-3">
                    <label asp-for="BitisSaati" class="control-label">Bitiş Saati</label>
                    <input type="time" asp-for="BitisSaati" class="form-control" value="17:00" />
                </div>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Kaydet</button>
                <a asp-action="TakvimYonetimi" class="btn btn-secondary">İptal</a>
            </div>
        </form>
    </div>
</div>