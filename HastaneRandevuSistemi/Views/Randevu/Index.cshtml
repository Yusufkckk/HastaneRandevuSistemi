@model IEnumerable<HastaneRandevuSistemi.Models.Randevu>
@{
    ViewData["Title"] = "Randevularım";
}

<div class="container mt-4">
    <h2><i class="fas fa-calendar-alt"></i> Randevularım</h2>
    <hr />

    @if (TempData["Mesaj"] != null)
    {
        <div class="alert alert-success">@TempData["Mesaj"]</div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">Henüz bir randevu geçmişiniz yok. <a asp-action="RandevuAl">Hemen randevu alın.</a></div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="bg-light">
                <tr>
                    <th>Tarih</th>
                    <th>Saat</th>
                    <th>Departman</th>
                    <th>Doktor</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    // Satır rengini duruma göre ayarlayalım (Opsiyonel)
                    // İptal ise biraz soluk görünsün
                    string satirClass = (item.Durum == 3) ? "text-muted table-light" : "";

                    <tr class="@satirClass">
                        <td>@item.RandevuTarihi.ToString("dd.MM.yyyy")</td>
                        <td>@item.RandevuTarihi.ToString("HH:mm")</td>
                        <td>@item.Doktor.Departman.DepartmanAdi</td>
                        <td>@item.Doktor.Ad @item.Doktor.Soyad</td>
                        <td>
                            @if (item.Durum == 1)
                            {
                                <span class="badge bg-success">Onaylandı</span>
                            }
                            else if (item.Durum == 0)
                            {
                                <span class="badge bg-warning text-dark">Beklemede</span>
                            }
                            else if (item.Durum == 2)
                            {
                                <span class="badge bg-secondary">Tamamlandı</span>
                            }
                            else if (item.Durum == 3)
                            {
                                <span class="badge bg-danger">İptal Edildi</span>
                            }
                        </td>
                        <td>
                            @if (item.Durum != 3 && item.RandevuTarihi > DateTime.Now)
                            {
                                <a asp-action="RandevuIptal" asp-route-id="@item.RandevuID"
                                   class="btn btn-outline-danger btn-sm"
                                   onclick="return confirm('Randevuyu iptal etmek istediğinize emin misiniz?');">
                                    <i class="fas fa-times"></i> İptal Et
                                </a>
                            }
                            else if (item.Durum == 3)
                            {
                                <small class="text-danger"><i class="fas fa-ban"></i> İptal Edildi</small>
                            }
                            else
                            {
                                <small class="text-muted">İşlem Yapılamaz</small>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>